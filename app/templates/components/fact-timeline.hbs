<div class="panel-body">
  <ul class="timeline">
    {{#each facts as |fact|}}
      <li>
        <div class="timeline-badge">{{fa-icon 'check'}}</div>
        <div class="timeline-panel">
          <div class="timeline-heading">
            <h4 class="timeline-title">{{fact.title}}</h4>
            <p>
              <small class="text-muted">
                {{fa-icon 'clock-o'}}
                {{ago fact.start_date}} -
                {{moment fact.start_date "MMM Do[,] YYYY"}}
              </small>
            </p>
          </div>
          <div class="timeline-body">
            <p>
              {{markdown-section content=fact.description}}
            </p>
            {{#if fact.hasLink}}
              <p>
                <a href='{{fact.additional_info_link}}' target='_blank'>
                  Click here for Additional Information.
                </a>
              </p>
            {{/if}}
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
</div>
