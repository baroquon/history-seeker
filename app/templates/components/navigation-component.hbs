<div class="container-fluid">
  <div class="navbar-header">
    <button {{action 'mobileToggle'}} type="button" class="navbar-toggle {{if mobileShow 'active'}}" >
      <i class="fa fa-bars"></i>
    </button>
    {{#link-to 'index' class='navbar-brand'}}
      <i class="fa fa-history"></i> <span class="light">history</span>Seeker
    {{/link-to}}
  </div>
  <div class="{{if mobileShow 'in' '' }} collapse navbar-collapse">
    <ul class="nav navbar-nav">
      {{#if session.isAuthenticated}}
        {{#if isTeacher}}
          <li>{{#link-to 'user.index'}}Students{{/link-to}}</li>
        {{/if}}
        <li>{{#link-to 'user.curriculums'}}Curriculums{{/link-to}}</li>
        <li>{{#link-to 'user.all-facts'}}All Facts{{/link-to}}</li>
      {{else}}
        <li class="hidden">
          <a href="#page-top"></a>
        </li>
        <li>
          <a class="page-scroll" href="#about">About</a>
        </li>
        <li>
          <a class="page-scroll" href="#how-it-works">How It Works</a>
        </li>
        <li>
          <a class="page-scroll" href="#contact">Contact</a>
        </li>

      {{/if}}
    </ul>
    {{auth-menu session=session}}
  </div>
</div>
