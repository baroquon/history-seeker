<div class="container-fluid">
  <div class="navbar-header">
    <button {{action 'mobileToggle'}} type="button" class="navbar-toggle {{if mobileShow 'active'}}" >
      <i class="fa fa-bars"></i>
    </button>
    {{#link-to 'index' class='navbar-brand'}}
      <span class="light">History</span>Seeker
    {{/link-to}}
  </div>
  <div class="{{if mobileShow 'in' '' }} collapse navbar-collapse">
    <ul class="nav navbar-nav">
      {{#if session.isAuthenticated}}
        {{#if isTeacher}}
          {{#link-to 'user.index' tagName='li' href=false}}
            {{link-to 'Students' 'user.index'}}
          {{/link-to}}
          {{#link-to 'user.curriculums' tagName='li' href=false}}
            {{link-to 'Curriculums' 'user.curriculums'}}
          {{/link-to}}
        {{/if}}
        {{#link-to 'user.my-facts' tagName='li' href=false}}
          {{link-to 'My Facts' 'user.my-facts'}}
        {{/link-to}}
        {{#link-to 'user.all-facts' tagName='li' href=false}}
          {{link-to 'All Facts' 'user.all-facts'}}
        {{/link-to}}
        {{!--
          This was commented out as the section is not currently in use -
          I am leaving this comment and the route as is because I anticipate putting
          it in use in the near future and I wanted to leave a note that when this is added
          back we need to make sure that the menu still works at all breakpoints as this
          currently breaks the layout on small breakpoints
          {{#link-to 'user.lessons' tagName='li' href=false}}
            {{link-to 'Lessons' 'user.lessons'}}
          {{/link-to}}
        --}}
      {{else}}
        <li class="hidden">
          <a href="#page-top"></a>
        </li>
        {{#link-to 'about' tagName='li' href=false}}
          {{link-to 'About' 'about'}}
        {{/link-to}}
        {{#link-to 'how-it-works' tagName='li' href=false}}
          {{link-to 'How it Works' 'how-it-works'}}
        {{/link-to}}
        {{#link-to 'contact' tagName='li' href=false}}
          {{link-to 'Contact' 'contact'}}
        {{/link-to}}

      {{/if}}
    </ul>
    {{auth-menu session=session current_user=current_user}}
  </div>
</div>
