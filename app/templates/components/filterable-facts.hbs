<div class='row'>
  <div class='col-md-12'>
		<div class="panel panel-default">
		  <!-- Default panel contents -->
		  <div class="panel-heading">Choose Some Facts:</div>
			<div class="panel-body">
				<div class='row'>
				  <div class='col-md-3'>
						{{bootstrap-datepicker
							placeholder='From Date'
						  value=newFromDate
							startView="decade"
						  class='form-control'
						}}
					</div>
				  <div class='col-md-3'>
						{{bootstrap-datepicker
						  placeholder='To Date'
							startView="decade"
						  value=newToDate
						  class='form-control'
						}}
					</div>
					<div class='col-md-3 col-md-offset-3'>
						{{input
						  type='text'
							placeholder='Search'
						  value=filter
						  class='form-control'
						}}
				  </div>
				</div>
			</div>
		  <table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Add to Curriculum</th>
						<th>Title</th>
						<th>What Happened</th>
						<th>When it Happened</th>
					</tr>
				</thead>
				<tbody>
					{{#each rangeFilteredContent as |fact|}}
					  {{add-fact-to-object fact=fact addFactToCurriculum="addFactToCurriculum"}}
			    {{/each}}
				</tbody>
		  </table>
		</div>
  </div>
</div>
