<div class='row'>
  <div class='col-md-12'>
    <div class="btn-group fact-component" role="group" aria-label="...">
      <button class='btn btn-default btn-lg' {{action 'switchView'}}>
        {{#if listView}}
          <i class="fa fa-map-marker"></i>
          Map View
        {{else}}
          <i class="fa fa-bars"></i>
          List View
        {{/if}}
      </button>
    </div>
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">
        {{#if isForm}}
          Choose Some Facts:
        {{else}}
          Here is a list of facts:
        {{/if}}
      </div>
      <div class="panel-body">
        <div class='row'>
          <div class='col-md-3'>
            {{bootstrap-datepicker
              placeholder='From Date'
              value=newFromDate
              startView="decade"
              class='form-control'
            }}
          </div>
          <div class='col-md-3'>
            {{bootstrap-datepicker
              placeholder='To Date'
              startView="decade"
              value=newToDate
              class='form-control'
            }}
        	</div>
        	<div class='col-md-3 col-md-offset-3'>
            {{input
              type='text'
              placeholder='Search'
              value=filter
              class='form-control'
            }}
          </div>
        </div>
      </div>

      {{#if listView}}
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              {{#if isForm}}
                <th>Add to Curriculum</th>
              {{/if}}
              <th>Title</th>
              <th>What Happened</th>
              <th>When it Happened</th>
            </tr>
          </thead>
          <tbody>
            {{#each rangeFilteredContent as |fact|}}
              {{add-fact-to-object action='showModal' fact=fact resetChecks=resetChecks addFactToCurriculum="addFactToCurriculum" isForm=isForm}}
            {{/each}}
          </tbody>
        </table>
      {{else}}
        This is where the map view goes

        <div class='map-container'>
          {{google-map lat=centerLat
                     lng=centerLng
                     zoom=zoom
                     markers=content
                     gopt_zoomControl=false}}

          <div class="controls">
            <label>
              {{zoom}}
              Zoom:
              {{input type="range" value=zoom min=0 max=18 step=1}}
            </label>
          </div>
        </div>

      {{/if}}
    </div>
  </div>
</div>
