<div class='row'>
  <div class='col-md-12'>
    <div class="btn-group fact-component" role="group" aria-label="...">
      <button class="btn btn-default btn-lg {{if listType 'active'}}" {{action 'switchView' 'list'}}>
        <i class="fa fa-bars"></i>
        List View
      </button>
      <button class="btn btn-default btn-lg {{if mapType 'active'}}" {{action 'switchView' 'map'}}>
        <i class="fa fa-map-marker"></i>
        Map View
      </button>
      <button class="btn btn-default btn-lg {{if timeType 'active'}}"  {{action 'switchView' 'time'}}>
        <i class="fa fa-pagelines"></i>
        Timeline View
      </button>
    </div>
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">
        {{#if isForm}}
          Choose Some Facts:
        {{else}}
          Here is a list of facts:
        {{/if}}
      </div>
      <div class="panel-body">
        <div class='row'>
          <div class='col-md-3'>
            {{bootstrap-datepicker
              placeholder='From Date'
              value=newFromDate
              startView="decade"
              class='form-control'
            }}
          </div>
          <div class='col-md-3'>
            {{bootstrap-datepicker
              placeholder='To Date'
              startView="decade"
              value=newToDate
              class='form-control'
            }}
        	</div>
        	<div class='col-md-3 col-md-offset-3'>
            {{input
              type='text'
              placeholder='Search'
              value=filter
              class='form-control'
            }}
          </div>
        </div>
      </div>

      {{#if listType}}
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              {{#if isForm}}
                <th>Add to Curriculum</th>
              {{/if}}
              <th>Title</th>
              <th>What Happened</th>
              <th>When it Happened</th>
            </tr>
          </thead>
          <tbody>
            {{#each rangeFilteredContent as |fact|}}
              {{add-fact-to-object action='showModal' fact=fact resetChecks=resetChecks addFactToCurriculum="addFactToCurriculum" isForm=isForm}}
            {{/each}}
          </tbody>
        </table>
      {{else if mapType}}
        {{ol3-map}}
      {{else if timeType}}
        {{fact-timeline facts=rangeFilteredContent}}
      {{/if}}
    </div>
  </div>
</div>
