  <td>
    {{student.fullName}}
  </td>
  <td>
    <button class='styless-button' {{action 'updateStudent'}}>
      {{fa-icon "edit"}} Edit
    </button>
  </td>
  <td>
    <button class='styless-button' {{action 'giveAssignment'}}>
      {{fa-icon "file-o"}} Give Assignment
    </button>
  </td>
{{#liquid-if isAddingAssignment}}
  <div class='row'>
    <div class='col-md-12'>
      <div class="form-group">
        <label for="last_name">Assignment</label>
        {{textarea
          value=student.assignment
          placeholder='Assignment'
          class='form-control'
          }}
      </div>
    </div>
  </div>
  <button {{action 'updateStudent'}} class='btn btn-primary'>Update Student</button>
{{/liquid-if}}
{{#liquid-if isEditing}}
  <div class='row'>
    <div class='col-md-4'>
      <div class="form-group">
        <label for="first_name">First Name</label>
        {{input
          type='text'
          value=student.first_name
          placeholder='First Name'
          class='form-control'
          }}
      </div>
    </div>
    <div class='col-md-4'>
      <div class="form-group">
        <label for="middle_name">Middle Name</label>
        {{input
          type='text'
          placeholder='Middle Name'
          value=student.middle_name
          class='form-control'
          }}
      </div>
    </div>
    <div class='col-md-4'>
      <div class="form-group">
        <label for="last_name">Last Name</label>
        {{input
          type='text'
          value=student.last_name
          placeholder='Last Name'
          class='form-control'
          }}
      </div>
    </div>
    <div class='col-md-4'>
      <div class="form-group">
        <label for="date_of_birth">Date of Birth</label>
        {{bootstrap-datepicker
          value=student.date_of_birth
          startView=2
          autoclose=true
          placeholder='Date Of Birth'
          class='form-control'
          }}
      </div>
    </div>
    <div class='col-md-4'>
      <div class="form-group">
        <label for="last_name">Email</label>
        {{input
          type='text'
          value=student.email
          placeholder='Email'
          class='form-control'
          }}
      </div>
    </div>
  </div>
  <button {{action 'updateStudent'}} class='btn btn-primary'>Update Student</button>
{{/liquid-if}}
