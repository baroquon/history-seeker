<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" {{action 'closeModal'}} aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{model.title}}</h4>
      </div>
      <div class="modal-body">
        <p>
          {{markdown-section content=model.description}}
        </p>
        <div class='map-container'>
          {{ol3-map}}
          {{ol3-map facts=markers}}
        </div>
        <p>
          <strong>Latitude:</strong> {{model.lat}}
          <strong>Longitude:</strong> {{model.lng}}
        </p>
        <p>
          <strong>
            Started:
          </strong>
          {{model.formattedDate}}
          <strong>
            Ended:
          </strong>
          {{model.formattedDate}}
        </p>
        {{#if model.hasLink}}
          <p>
            <a href='{{model.additional_info_link}}' target='_blank'>
              Click here for Additional Information.
            </a>
          </p>
        {{/if}}
      </div>
    </div>
  </div>
</div>
