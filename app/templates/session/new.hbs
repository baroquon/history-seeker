<div class="col-md-6 col-md-offset-3">
  <h2 class="brand-heading">
    Login
  </h2>
  <form {{action "toggleLoading" on="submit"}}>
    <div  class="form-group input-group-lg">
      <label for='email' class='sr-only'>Email</label>
      {{input
        value=identification
        placeholder="E-mail"
        type="text"
        class="form-control"
        name="email"}}
    </div>
    <div class="form-group input-group-lg">
      <label for='password' class='sr-only'>Password</label>
      {{input value=password class="form-control" placeholder="Password" type="password" name="password"}}
    </div>
    <div class="form-group input-group-lg">
      <div class='row'>
        <div class='col-md-12 login-button'>
          <button class="btn btn-primary" type="submit">
            {{#if isLoading}}
              {{loading-spinner}}
            {{else}}
              Login
            {{/if}}
          </button>
        </div>
      </div>
    </div>
    <div class='reset-password'>
      <a href='https://signup.historyseeker.com/resetpassword'>Reset Password</a>
    </div>
  </form>
</div>
