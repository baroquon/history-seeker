<header>
  {{navigation-component session=session current_user=current_user}}
</header>
<main>
  <div class='page-header'>
    <h2>
      {{link-to current_user.fullName 'user.index'}}
    </h2>
  </div>
  <div class='row'>
    {{#unless isTeacher}}
      <div class='col-md-2'>
        <ul class="list-unstyled">
          <li><h4>Curriculums</h4></li>
          {{#each current_user.teacher.curriculums as |curriculum|}}
            <li>{{#link-to 'user.curriculum.show' curriculum}}{{curriculum.title}}{{/link-to}}</li>
          {{/each}}
        </ul>
      </div>
    {{/unless}}
    <div class="{{if isTeacher 'col-md-12' 'col-md-10'}}">
      {{outlet}}
    </div>
  </div>
</main>
