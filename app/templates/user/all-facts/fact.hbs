<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        {{#link-to 'user.all-facts' class='close'}}<span aria-hidden="true">&times;</span>{{/link-to}}
        <h4 class="modal-title">{{model.title}}</h4>
      </div>
      <div class="modal-body">
        <div class='map-container'>
          {{ol3-map}}
          {{ol3-map facts=markers}}
        </div>
        <p>
          {{markdown-section content=model.description}}
        </p>
        <p>
          <strong>Latitude:</strong> {{model.lat}}
          <strong>Longitude:</strong> {{model.lng}}
        </p>
        <p>
          <strong>
            Started:
          </strong>
          {{model.formattedDate}}
          <strong>
            Ended:
          </strong>
          {{model.formattedDate}}
        </p>
        <p>
          <strong>Related Facts</strong>
          <ul>
            {{#each relatedFacts as |related|}}
              <li>{{link-to related.title 'user.all-facts.fact' related.id}}</li>
            {{/each}}
          </ul>
        </p>
        {{#if model.hasLink}}
          <p>
            <a href='{{model.additional_info_link}}' target='_blank'>
              Click here for Additional Information.
            </a>
          </p>
        {{/if}}
      </div>
    </div>
  </div>
</div>
