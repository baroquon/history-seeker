{{back-to-teacher}}
<div class='row'>
  <div class='col-md-4'>
    <div class="form-group">
      <label for="first_name">First Name</label>
      {{input
        type='text'
        value=newFirstName
        placeholder='First Name'
        class='form-control'
        }}
    </div>
  </div>
  <div class='col-md-4'>
    <div class="form-group">
      <label for="middle_name">Middle Name</label>
      {{input
        type='text'
        placeholder='Middle Name'
        value=newMiddleName
        class='form-control'
        }}
    </div>
  </div>
  <div class='col-md-4'>
    <div class="form-group">
      <label for="last_name">Last Name</label>
      {{input
        type='text'
        value=newLastName
        placeholder='Last Name'
        class='form-control'
        }}
    </div>
  </div>
  <div class='col-md-4'>
    <div class="form-group">
      <label for="date_of_birth">Date of Birth</label>
      {{bootstrap-datepicker
        value=newDateOfBirth
        startView=2
        autoclose=true
        placeholder='Date Of Birth'
        class='form-control'
        }}
    </div>
  </div>
</div>
<button class='btn btn-primary' {{action 'createStudent'}}>Create Student</button>
